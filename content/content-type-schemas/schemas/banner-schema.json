{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://developer-portal-examples.com/banner",

  "title": "Example Banner",
  "description": "Banner used for code examples in developer portal",

  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],

  "type": "object",
  "properties": {
    "title": {
      "title": "Title",
      "description": "Main title of this banner",
      "type": "string"
    },
    "subtitle": {
      "title": "Subtitle",
      "description": "Secondary title of this banner",
      "type": "string"
    },
    "accessibleImage": {
      "type": "object",
      "title": "Accessible background image",
      "properties": {
        "alt": {
          "title": "Alternative text",
          "description": "Alternative text for the image"
        },
        "image": {
          "title": "Background image",
          "description": "The background image of this banner",
          "allOf": [
            {
              "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
            }
          ]
        }
      }
    },
    "link": {
      "type": "object",
      "title": "Link",
      "properties": {
        "url": {
          "title": "URL",
          "description": "The url that will be opened when call to action is clicked",
          "type": "string"
        },
        "title": {
          "title": "Title",
          "description": "Text displayed for the call to action",
          "type": "string"
        }
      }
    }
  },
  "propertyOrder": []
}
